---
import ArchiveNav from '../components/ArchiveNav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  <link rel="icon" href="/favicon.ico" sizes="32x32" />
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>
  <style is:global>
    *, *::before, *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    html, body {
      background-color: #fff;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
      line-height: 1.8;
      color: #333;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  </style>
  <style>
    header {
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #eee;
    }
    header nav {
      max-width: 700px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .site-title {
      font-size: 1.1rem;
      font-weight: bold;
    }
    .nav-links a {
      font-size: 0.85rem;
      color: #888;
    }
    main {
      max-width: 700px;
      margin: 2rem auto;
      padding: 0 1.5rem;
    }
    footer {
      text-align: center;
      padding: 2rem 1.5rem;
      color: #aaa;
      font-size: 0.8rem;
      margin-top: 3rem;
    }
    .admin-link {
      display: inline-block;
      margin-top: 0.5rem;
      font-size: 0.65rem;
      color: #ccc;
    }
    .admin-link:hover {
      color: #999;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href="/" class="site-title">tbiのブログ</a>
      <div class="nav-links">
      </div>
    </nav>
  </header>
  <main>
    <slot />
    <ArchiveNav />
  </main>
  <footer>
    <p>&copy; {new Date().getFullYear()} tbiのブログ</p>
    <a href="/admin/" class="admin-link">管理</a>
  </footer>
  <script is:inline>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
