---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" is:inline></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;
      line-height: 1.8;
      color: #333;
      background-color: #fafafa;
    }
    header {
      background: #fff;
      border-bottom: 1px solid #e0e0e0;
      padding: 1rem 2rem;
    }
    header nav {
      max-width: 800px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    header nav a {
      text-decoration: none;
      color: #333;
    }
    header nav .site-title {
      font-size: 1.4rem;
      font-weight: bold;
    }
    header nav .nav-links a {
      margin-left: 1.5rem;
      font-size: 0.9rem;
      color: #666;
    }
    header nav .nav-links a:hover {
      color: #333;
    }
    main {
      max-width: 800px;
      margin: 2rem auto;
      padding: 2rem;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);
    }
    footer {
      text-align: center;
      padding: 2rem;
      color: #999;
      font-size: 0.85rem;
      border-top: 1px solid #e0e0e0;
      margin-top: 3rem;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href="/" class="site-title">tbiのブログ</a>
      <div class="nav-links">
        <a href="/admin/">管理画面</a>
      </div>
    </nav>
  </header>
  <main>
    <slot />
  </main>
  <footer>
    <p>&copy; {new Date().getFullYear()} tbiのブログ</p>
  </footer>
  <script is:inline>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
