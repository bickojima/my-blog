---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const categoryLabels: Record<string, string> = {
  devices: 'デバイス',
  finance: 'ファイナンス',
};

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  const categories = new Set<string>();

  allPosts.forEach(post => {
    if (post.data.category && !post.data.draft) {
      categories.add(post.data.category);
    }
  });

  return Array.from(categories).map(category => ({
    params: { category },
  }));
}

const { category } = Astro.params;
const label = categoryLabels[category ?? ''] ?? category;

const allPosts = await getCollection('posts');
const posts = allPosts
  .filter(post => !post.data.draft && post.data.category === category)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Base title={`${label} - tbiのブログ`}>
  <h1>{label}</h1>
  <a href="/" class="back-link">&larr; 記事一覧に戻る</a>

  {posts.length === 0 && <p class="no-posts">このカテゴリの記事はありません。</p>}

  <ul class="post-list">
    {posts.map(post => (
      <li>
        <a href={`/posts/${post.slug}`} class="post-link">
          <time datetime={post.data.date}>{post.data.date}</time>
          <span class="post-title">{post.data.title}</span>
        </a>
      </li>
    ))}
  </ul>

  <style>
    h1 {
      font-size: 1.4rem;
      margin-bottom: 0.5rem;
    }
    .back-link {
      display: inline-block;
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 1.5rem;
    }
    .back-link:hover {
      color: #333;
    }
    .no-posts {
      color: #999;
    }
    .post-list {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .post-link {
      display: flex;
      align-items: baseline;
      gap: 1rem;
    }
    .post-link time {
      font-size: 0.85rem;
      color: #999;
      flex-shrink: 0;
    }
    .post-title {
      font-size: 1rem;
    }
    .post-link:hover .post-title {
      text-decoration: underline;
    }
  </style>
</Base>
