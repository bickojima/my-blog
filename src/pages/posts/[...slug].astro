---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Base title={post.data.title}>
  <article>
    <header class="post-header">
      <time datetime={post.data.date}>{post.data.date}</time>
      <h1>{post.data.title}</h1>
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="post-tags">
          {post.data.tags.map((tag: string) => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      )}
    </header>

    <div class="post-content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/">&larr; 記事一覧に戻る</a>
    </footer>
  </article>

  <style>
    .post-header {
      margin-bottom: 2rem;
    }
    .post-header time {
      font-size: 0.85rem;
      color: #999;
    }
    .post-header h1 {
      font-size: 1.6rem;
      margin-top: 0.25rem;
      line-height: 1.4;
    }
    .post-content {
      line-height: 1.9;
    }
    .post-content :global(h2) {
      font-size: 1.3rem;
      margin-top: 2rem;
      margin-bottom: 0.75rem;
    }
    .post-content :global(h3) {
      font-size: 1.1rem;
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
    }
    .post-content :global(p) {
      margin-bottom: 1rem;
    }
    .post-content :global(figure) {
      margin: 1.5rem 0;
    }
    .post-content :global(figure img) {
      border-radius: 4px;
    }
    .post-content :global(figcaption) {
      font-size: 0.85rem;
      color: #888;
      text-align: center;
      margin-top: 0.5rem;
    }
    .post-content :global(img) {
      border-radius: 4px;
      margin: 1rem 0;
    }
    .post-content :global(code) {
      background: #f5f5f5;
      padding: 0.15rem 0.3rem;
      border-radius: 3px;
      font-size: 0.9em;
    }
    .post-content :global(pre) {
      background: #f5f5f5;
      padding: 1rem;
      border-radius: 4px;
      overflow-x: auto;
      margin: 1rem 0;
    }
    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-top: 0.5rem;
    }
    .tag {
      font-size: 0.75rem;
      background: #f0f0f0;
      color: #555;
      padding: 0.1rem 0.5rem;
      border-radius: 3px;
    }
    .tag:hover {
      background: #333;
      color: #fff;
    }
    .post-footer {
      margin-top: 3rem;
      padding-top: 1.5rem;
      border-top: 1px solid #eee;
    }
    .post-footer a {
      color: #888;
      font-size: 0.9rem;
    }
    .post-footer a:hover {
      color: #333;
    }
  </style>
</Base>
