---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';

const categoryLabels: Record<string, string> = {
  devices: 'デバイス',
  finance: 'ファイナンス',
};

const allPosts = await getCollection('posts');
const posts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Base title="tbiのブログ">
  <h1>記事一覧</h1>

  {posts.length === 0 && <p class="no-posts">まだ記事がありません。</p>}

  <ul class="post-list">
    {posts.map(post => (
      <li class="post-item">
        <time datetime={post.data.date}>{post.data.date}</time>
        {post.data.category && (
          <a href={`/category/${post.data.category}`} class="category">{categoryLabels[post.data.category] ?? post.data.category}</a>
        )}
        <a href={`/posts/${post.slug}`} class="post-title">{post.data.title}</a>
      </li>
    ))}
  </ul>

  <style>
    h1 {
      font-size: 1.4rem;
      margin-bottom: 1.5rem;
    }
    .no-posts {
      color: #999;
    }
    .post-list {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    .post-item {
      display: flex;
      align-items: baseline;
      gap: 0.75rem;
    }
    .post-item time {
      font-size: 0.85rem;
      color: #999;
      flex-shrink: 0;
    }
    .category {
      font-size: 0.75rem;
      color: #888;
      background: #f5f5f5;
      padding: 0.1rem 0.5rem;
      border-radius: 3px;
      flex-shrink: 0;
    }
    .category:hover {
      background: #eee;
      color: #333;
    }
    .post-title {
      font-size: 1rem;
    }
    .post-title:hover {
      text-decoration: underline;
    }
  </style>
</Base>
