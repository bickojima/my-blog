---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';

const categoryLabels: Record<string, string> = {
  devices: 'デバイス',
  finance: 'ファイナンス',
};

const allPosts = await getCollection('posts');
const posts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

---

<Base title="tbiのブログ">
  <h1>記事一覧</h1>

  {posts.length === 0 && <p class="no-posts">まだ記事がありません。</p>}

  <div class="post-list">
    {posts.map(post => (
      <article class="post-card">
        {post.data.thumbnail && (
          <a href={`/posts/${post.slug}`}>
            <img src={post.data.thumbnail} alt={post.data.title} class="post-thumbnail" />
          </a>
        )}
        <div class="post-body">
          <div class="post-meta">
            <time datetime={post.data.date}>{post.data.date}</time>
            {post.data.category && (
              <a href={`/category/${post.data.category}`} class="category">{categoryLabels[post.data.category] ?? post.data.category}</a>
            )}
          </div>
          <a href={`/posts/${post.slug}`} class="post-title">{post.data.title}</a>
          {post.data.summary && (
            <p class="post-summary">{post.data.summary}</p>
          )}
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="post-tags">
              {post.data.tags.map((tag: string) => (
                <a href={`/tags/${tag}`} class="tag">{tag}</a>
              ))}
            </div>
          )}
        </div>
      </article>
    ))}
  </div>

  <style>
    h1 {
      font-size: 1.4rem;
      margin-bottom: 1.5rem;
    }
    .no-posts {
      color: #999;
    }
    .post-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    .post-card {
      border-bottom: 1px solid #eee;
      padding-bottom: 1.5rem;
    }
    .post-thumbnail {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 4px;
      margin-bottom: 0.75rem;
    }
    .post-meta {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 0.25rem;
    }
    .post-meta time {
      font-size: 0.85rem;
      color: #999;
    }
    .category {
      font-size: 0.75rem;
      color: #888;
      background: #f5f5f5;
      padding: 0.1rem 0.5rem;
      border-radius: 3px;
    }
    .category:hover {
      background: #eee;
      color: #333;
    }
    .post-title {
      display: block;
      font-size: 1.15rem;
      font-weight: bold;
      margin-bottom: 0.25rem;
    }
    .post-title:hover {
      text-decoration: underline;
    }
    .post-summary {
      font-size: 0.9rem;
      color: #666;
      line-height: 1.6;
    }
    .post-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
      margin-top: 0.5rem;
    }
    .tag {
      font-size: 0.75rem;
      background: #f0f0f0;
      color: #555;
      padding: 0.1rem 0.5rem;
      border-radius: 3px;
    }
    .tag:hover {
      background: #333;
      color: #fff;
    }
  </style>
</Base>
